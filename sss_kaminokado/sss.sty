%def. for section, subsection, subsubsection
\def\section{\@startsection {section}{1}{\z@}{5ex plus 1ex minus 
 .2ex}{1.5ex plus .2ex}{\large\centering\bf}}
\def\subsection{\@startsection{subsection}{2}{\z@}{2.5ex plus 1ex minus 
 .2ex}{.01ex plus .2ex}{\bf}}
\def\subsubsection{\@startsection{subsubsection}{3}{\z@}{2.5ex plus 
1ex minus .2ex}{1.5ex plus .2ex}{\bf}}

%def. for eqnarray
 \def\eqnarray{%
     \stepcounter{equation}%
     \def\@currentlabel{\p@equation\theequation}%
     \m@th
     \global\@eqnswtrue  \global\@eqcnt\z@
     \tabskip\@centering \let\\\@eqncr
     $$\everycr{}\halign to\displaywidth\bgroup
         \hskip\@centering
         $\displaystyle\tabskip\z@skip{##}$\@eqnsel
        &\global\@eqcnt\@ne
         \hskip \tw@\arraycolsep%%%%% optional space
         \hfil$\displaystyle{{}##{}}$\hfil
        &\global\@eqcnt\tw@
         \hskip \tw@\arraycolsep%%%%% optional space
         $\displaystyle{##}$\hfil\tabskip\@centering
        &\global\@eqcnt\thr@@
         \hbox to\z@\bgroup\hss##\egroup
         \tabskip\z@skip
        \cr}


