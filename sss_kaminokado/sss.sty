  \begin{center}
  \let \footnote \thanks
    \vskip -1mm
    {\LARGE \bf 
     \@title 
     \par}
    \vskip 6mm
    {\large%\normalsize %\bf
      \lineskip .5em%
      \begin{tabular}[t]{c}
        \@author
      \end{tabular}      \par}
    \vskip 1em
   {\large \@date}
  \end{center}
  \par
  \vskip 0.5em 
}
